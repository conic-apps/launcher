{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:window:allow-close",
    "core:event:default",
    "core:event:allow-emit",
    "core:webview:allow-create-webview",
    "core:webview:allow-webview-size",
    "core:webview:default",
    "log:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text",
    "config:allow-cmd-load-config-file",
    "config:allow-cmd-save-config",
    "account:allow-cmd-list-accounts",
    "account:allow-cmd-get-account-by-uuid",
    "account:allow-cmd-add-microsoft-account",
    "account:allow-cmd-delete-account",
    "account:allow-cmd-refresh-all-microsoft-accounts",
    "account:allow-cmd-refresh-microsoft-account-by-uuid",
    "install:allow-cmd-get-minecraft-version-list",
    "install:allow-cmd-get-fabric-version-list",
    "install:allow-cmd-get-quilt-version-list",
    "install:allow-cmd-get-forge-version-list",
    "install:allow-cmd-get-neoforged-version-list",
    "install:allow-cmd-install",
    "platform:allow-cmd-get-platform-info",
    "launch:allow-cmd-launch",
    "instance:allow-cmd-create-instance",
    "instance:allow-cmd-list-instances",
    "instance:allow-cmd-update-instance",
    "instance:allow-cmd-delete-instance",
    "opener:default"
  ]
}
